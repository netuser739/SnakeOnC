# Объявление компилятора
CC = gcc

# Флаги компиляции
CFLAGS = -Wall -g

# Заголовочные файлы
DEPS = error.h 

# Объектные файлы, которые нужно создать
OBJ = Error.o

# Правило для создания объектных файлов
%.o: %.c $(DEPS)
	$(CC) -c -o $@ $< $(CFLAGS)

# Правило для создания исполняемого файла
main: $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS)

# Цель для очистки объектных файлов и исполняемого файла
.PHONY: clean

clean:
	rm -f *.o main


